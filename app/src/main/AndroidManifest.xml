            android:name=".activities.general.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.student.PublicQuizzesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.general.MapsActivity"
