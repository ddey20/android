        <activity
            android:name=".activities.student.JoinPublicQuizActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.teacher.NewQuizActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.teacher.NewQuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.teacher.InactiveQuizzesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.teacher.ActiveQuizzesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.teacher.ActivateQuizActivity"
            android:screenOrientation="portrait" />
